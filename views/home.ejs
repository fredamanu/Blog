<%- include('partials/header'); -%>
<div class="container">
  <h1>Home</h1>
  <p> <%=kindOfHomeStartingContent%> </p>
  <div class="row">
    <% posts.forEach((post)=>{ const url = post.imageURL %> 
      <% const postTitle=post.title.slice(0, 40).concat("...") %>
    <div class="col">
      <a href="/posts/<%=post.title%>">
        <div class="card" style="width: 22rem">
          <img src="<%=url%>" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-text"> <%=postTitle%> </h5>
            <div class="mute-text-container">
              <div class="group-one-container">
                <p class="card-text">
                  <small class="text-muted"> <%=post.author%> </small>
                </p>
                <p class="card-text">
                  <small class="text-muted"> <%=post.date%> </small>
                </p>
              </div>
              <div class="group-two-container">
                <p class="card-text">
                  <small class="text-muted">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      fill="currentColor"
                      class="bi bi-chat-fill"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="M8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6-.097 1.016-.417 2.13-.771 2.966-.079.186.074.394.273.362 2.256-.37 3.597-.938 4.18-1.234A9.06 9.06 0 0 0 8 15z"
                      />
                    </svg>
                  </small>
                </p>
                <p class="card-text">
                  <small class="text-muted">0</small>
                </p>
              </div>
            </div>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
</div>
<%- include('partials/footer'); -%>
